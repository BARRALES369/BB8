#include <Servo.h>

Servo servo1;

int PINSERVO = 2;
int PULSOMIN =600;
int PULSOMAX =2650;
int VALORPOT;
int ANGULO;
int POT = 0;

void setup(){
  servo1.attach(PINSERVO, PULSOMIN, PULSOMAX);
  //las entradas analogicas no requieren inicializaci√≥n
}

void loop(){
  VALORPOT = analogRead(POT);
  ANGULO = map(VALORPOT, 0, 1023, 0, 180);
  servo1.write(ANGULO);
  delay(30);
}
